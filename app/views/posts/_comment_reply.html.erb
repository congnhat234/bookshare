<li class="comment_reply">
  <div class="wn__comment">
    <div class="thumb">
      <%= image_tag child_comment.user.avatar_url %>
    </div>
    <div class="content">
      <div class="comnt__author d-block d-sm-flex">
        <span><%= link_to child_comment.user.name, user_path(child_comment.user) %></span>
        <span><%= l child_comment.created_at %></span>
        <div class="reply__btn">
          <a href="javascript:void(0)" class="reply_btn" parent_id="<%= child_comment.parent_id %>" user="<%= child_comment.user.name %>">Reply</a>
        </div>
        <% if current_user.id == child_comment.user.id %>
          <div class="reply__btn">
            <%= link_to "Delete", "javascript:void(0)", class: "delete_comment_btn",
              commentid: child_comment.id, pid: child_comment.post.id %>
          </div>
        <% end %>
      </div>
      <p><%= child_comment.content %></p>
    </div>
  </div>
</li>
