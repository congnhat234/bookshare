<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bradcaump__inner text-center">
          <h2 class="bradcaump-title">My Account</h2>
          <nav class="bradcaump-content">
            <a class="breadcrumb_item" href="index.html">Home</a>
            <span class="brd-separetor">/</span>
            <span class="breadcrumb_item active">My Account</span>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Bradcaump area -->
<div class="container">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <%= image_tag @user.avatar_url, class: "img-responsive" %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @user.name %>
          </div>
          <div class="profile-usertitle-job">
            <%= @user.role.humanize %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
        <div class="profile-userbuttons" id="user-action">
          <% if @user.id != current_user.id %>
            <%= render "follow" %>
          <% else %>
            <%= link_to "Edit", edit_user_registration_path, class: "btn btn-success btn-sm" %>
            <%= link_to "Dash board", users_path, class: "btn btn-warning btn-sm" %>
          <% end %>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav">
            <li class="active">
              <a href="#">
                <i class="fas fa-home"></i>
                Overview </a>
            </li>
            <li>
              <%= link_to user_posts_path(@user) do %>
                <i class="fas fa-user"></i>
                User posts
              <% end %>
            </li>
            <li>
              <a href="#" target="_blank">
                <i class="fas fa-ok"></i>
                Tasks </a>
            </li>
            <li>
              <a href="#">
                <i class="fas fa-flag"></i>
                Help </a>
            </li>
          </ul>
        </div>
        <!-- END MENU -->
      </div>
    </div>
    <div class="col-md-9">
      <div class="profile-content">
        Some user related content goes here...
      </div>
    </div>
  </div>
</div>
