<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--3">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bradcaump__inner text-center">
          <h2 class="bradcaump-title"><%= t ".title" %></h2>
          <nav class="bradcaump-content">
            <%= link_to t(".home"), root_path, class: "breadcrumb_item" %>
            <span class="brd-separetor">/</span>
            <span class="breadcrumb_item active"><%= t ".title" %></span>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Bradcaump area -->
<!-- cart-main-area start -->
<div class="cart-main-area section-padding--lg bg--white">
  <div class="container">
    <% if @books.any? %>
      <div class="row">
        <div class="col-md-12 col-sm-12 ol-lg-12">
          <form action="#">
            <div class="table-content wnro__table table-responsive">
              <table>
                <thead>
                  <tr class="title-top">
                    <th class="product-thumbnail"><%= t "table.image" %></th>
                    <th class="product-name"><%= t "table.product" %></th>
                    <th class="product-price"><%= t "table.price" %></th>
                    <th class="product-quantity"><%= t "table.quantity" %></th>
                    <th class="product-subtotal"><%= t "table.total" %></th>
                    <th class="product-remove"><%= t "table.remove" %></th>
                  </tr>
                </thead>
                <tbody>
                  <%= render partial: "cart/book", collection: @books, as: :book %>
                </tbody>
              </table>
            </div>
          </form>
          <div class="cartbox__btn">
            <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
              <li><%= link_to t(".continue_shopping"), selling_books_path %></li>
              <li><%= link_to t(".checkout"), new_order_path %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6 offset-lg-6">
          <div class="cartbox__total__area">
            <div class="cart__total__amount">
              <span>Grand Total</span>
              <span class="grand-total"><%= number_to_currency_format get_cart_total(@books) %></span>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <span><strong><%= t ".empty_cart" %></strong> <%= link_to t(".continue_shopping"), books_path %></span>
    <% end %>
  </div>
</div>
<!-- cart-main-area end -->
