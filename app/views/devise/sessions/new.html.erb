<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bradcaump__inner text-center">
          <h2 class="bradcaump-title"><%= t ".title" %></h2>
          <nav class="bradcaump-content">
            <%= link_to t(".home"), root_path, class: "breadcrumb_item" %>
            <span class="brd-separetor">/</span>
            <span class="breadcrumb_item active"><%= t ".title" %></span>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Bradcaump area -->
<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
  <div class="container">
    <div class="row content-center">
      <div class="col-lg-6 col-12">
        <div class="my__account__wrapper">
          <h3 class="account__title"><%= t ".title" %></h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="account__form">
              <div class="input__box">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="input__box">
                <%= f.label :password, t("form.password") %>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
              <div class="form__btn">
                <%= f.submit t("form.login") %>
                <% if devise_mapping.rememberable? %>
                  <label class="label-for-checkbox">
                    <%= f.check_box :remember_me, class: "input-checkbox" %>
                    <%= f.label :remember_me, t("form.remember") %>
                  </label>
                <% end %>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End My Account Area -->
