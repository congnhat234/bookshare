  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= t ".inbox" %></h1>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".users" %></h3>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
              <%= render @conversations %>
            </ul>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
      <div class="col-md-9">
        <% if @conversation %>
          <!-- DIRECT CHAT PRIMARY -->
          <div class="card card-prirary cardutline direct-chat direct-chat-primary">
            <div class="card-body">
              <!-- Conversations are loaded here -->
              <div class="direct-chat-messages" id="direct-conversation-<%= @conversation.id %>">
                <%= render partial: "dashboard/messages/message", collection: @conversation.messages, as: :message %>
              </div>
              <!--/.direct-chat-messages-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <%= form_for [:dashboard, @conversation.messages.new], remote: true do |f| %>
                <div class="input-group">
                  <%= f.hidden_field :user_id, value: current_user.id %>
                  <%= f.hidden_field :conversation_id, value: @conversation.id %>
                  <%= f.text_field :body, class: "form-control", placeholder: t("placeholder.type_message") %>
                  <span class="input-group-append">
                    <%= f.submit t("action.send"), class: "btn btn-primary", id: "send_message" %>
                  </span>
                </div>
              <% end %>
            </div>
            <!-- /.card-footer-->
          </div>
          <!--/.direct-chat -->
        <% end %>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
