      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= t ".your_books" %></h1>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title"><%= t ".title" %></h3>
          </div>
          <!-- /.card-header -->
            <%= render "form" %>
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
