<% if sharing_book.notconfirm? && action_name == "index" %>
  <%= link_to dashboard_sharing_book_path(sharing_book), method: :delete, data: { confirm: t("alert.confirm") } do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
  <%= link_to "javascript:void(0)", title: "Confirm", class: "actionBtn", type: "confirm", id_sb: sharing_book.id do %>
    <i class="fas fa-check-circle"></i>
  <% end %>
<% elsif (sharing_book.done? || sharing_book.rejected?) && action_name == "index" %>
  <%= link_to dashboard_sharing_book_path(sharing_book), method: :delete, data: { confirm: t("alert.confirm") } do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
<% elsif action_name == "request_book" && sharing_book.inprogress? %>
  <%= link_to "javascript:void(0)", title: "Approve", class: "actionBtn", type: "approve", id_sb: sharing_book.id do %>
    <i class="fas fa-check-circle"></i>
  <% end %>
  <%= link_to "javascript:void(0)", title: "Reject", class: "actionBtn", type: "reject", id_sb: sharing_book.id do %>
    <i class="fas fa-times-circle"></i>
  <% end %>
<% elsif action_name == "request_book" && sharing_book.approved? %>
  <%= link_to "javascript:void(0)", title: "Done", class: "actionBtn", type: "done", id_sb: sharing_book.id do %>
    <i class="fas fa-check-circle"></i>
  <% end %>
<% end %>
