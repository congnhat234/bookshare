<% if order.pending? %>
  <%= link_to "javascript:void(0)", title: "Process", class: "actionOrderBtn", type: "process", id_order: order.id do %>
    <i class="fas fa-chevron-circle-right"></i>
  <% end %>
  <%= link_to "javascript:void(0)", title: "Cancel", class: "actionOrderBtn", type: "cancel", id_order: order.id do %>
    <i class="fas fa-times-circle"></i>
  <% end %>
<% elsif order.processing? %>
  <%= link_to "javascript:void(0)", title: "Cancel", class: "actionOrderBtn", type: "cancel", id_order: order.id do %>
    <i class="fas fa-times-circle"></i>
  <% end %>
  <%= link_to "javascript:void(0)", title: "Done", class: "actionOrderBtn", type: "done", id_order: order.id do %>
    <i class="fas fa-check-circle"></i>
  <% end %>
<% else %>
  <%= link_to dashboard_order_path(order), method: :delete, data: { confirm: t("alert.confirm") } do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>
