<!-- form start -->
<%= form_for [:admins, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label :name, t(".name"), class: "control-label" %>
      <%= f.text_field :name, required: true, class: "form-control",
        placeholder: t("placeholder.enter_category") %>
    </div>
  </div>
  <!-- /.card-body -->
  <div class="card-footer">
    <%= f.submit t("action.save"), class: "btn btn-primary" %>
    <button type="reset" class="btn"><%= t "action.reset" %></button>
  </div>
<% end %>
